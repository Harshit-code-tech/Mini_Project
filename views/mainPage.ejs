<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Enhancer</title>
    <link rel="stylesheet" href="/mainPage.css">
</head>
<body class="dark">
    <div class="logo">
        <img src="icon.png" alt="logo">
        <span class="logo-text">RenderX</span>
    </div>

    <div class="profile-container" id="profile">
        <div class="profile-circle">
            <img id="profileImage" alt="Profile">
        </div>
    </div>

    <div class="dialog-box" id="dialogBox">
        <button id="profileName">Profile</button>
        <button id="settingsBtn" onclick="openSettings()">Settings</button>
        <button id="imageCountBtn">Images Converted: <span id="imageCount">0</span></button>
        <a href="/logout"><button>Logout</button></a>
    </div>

    <div class="container">
        <h1>Upload & Enhance Image</h1>
        <div class="file-upload-container">
            <label for="fileInput" class="custom-file-button">Upload Image</label>
            <input type="file" id="fileInput" accept="image/*" hidden>
            <p id="fileName" class="file-name"></p>
        </div>

        <div class="preview-container">
            <div class="preview-box">
                <h3>Original</h3>
                <div class="preview-area">
                    <div class="loader hidden"></div>
                    <img id="preview" alt="Original Image Preview">
                </div>
            </div>
            <div class="arrow">âž¡</div>
            <div class="preview-box">
                <h3>Enhanced</h3>
                <div class="preview-area">
                    <div class="loader hidden"></div>
                    <img id="enhancedPreview" alt="Enhanced Image Preview">
                </div>
            </div>
        </div>

        <div class="button-container">
            <button id="enhanceBtn" class="hidden">Enhance Image</button>
            <button id="downloadBtn" class="hidden">Download Image</button>
        </div>
    </div>

    <script src="mainPage.js"></script>
</body>
</html>